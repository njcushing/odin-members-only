extends layout

block content
  h1 Create a new message
  if (currentUser)
    form(action="" method="POST")
      label(for="title") Title:
      input#title(name="title" type="text" required=true value=message ? message.title : "")
      br
      label(for="text") Text:
      textarea#text(name="text" required=true) #{message ? message.text : ""}
      br
      button(type="submit") Submit New Message
    if (errors)
      ul
        for error in errors
          li= error.msg
  else
    p You must be signed in to create new messages.
  hr
  a(href="/")
    button Return to Home
  